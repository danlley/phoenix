    <resultMap id="RM-PX-GOODS-COST-CFG" type="com.myteay.phoenix.common.dal.dataobject.PxGoodsDO">
        <result property="goodsId" column="goods_id" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result property="shopId" column="shop_id" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result property="goodsImage" column="goods_image" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result property="goodsTitle" column="goods_title" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result property="goodsDesc" column="goods_desc" javaType="java.lang.String" jdbcType="VARCHAR" />
        <result property="goodsCost" column="goods_cost" javaType="java.lang.String" jdbcType="VARCHAR" />
        <result property="gmtCreated" column="gmt_created" javaType="java.util.Date" jdbcType="TIMESTAMP"/>
        <result property="gmtModified" column="gmt_modified" javaType="java.util.Date" jdbcType="TIMESTAMP"/>
    </resultMap>

    <insert id="PX-GOODS-CFG-INSERT" parameterType="com.myteay.phoenix.common.dal.dataobject.PxShopDO">
		insert into phoenix.px_goods_cost_cfg (
		    goods_id, shop_id, goods_image, goods_title, goods_desc, goods_cost, gmt_created, gmt_modified
		) values (
		    #{goodsId}, #{shopId}, #{goodsImage}, #{goodsTitle}, #{goodsDesc}, #{goodsCost}, now(), now()
		) ;
    </insert>
    
    <select id="PX-GOODS-COST-CFG-GET-BY-GOODS-ID" resultMap="RM-PX-GOODS-COST-CFG">
	    <![CDATA[
	        select
	        	goods_id, shop_id, goods_image, goods_title, goods_desc, goods_cost, gmt_created, gmt_modified
	        from phoenix.px_goods_cost_cfg 
	        where (goods_id = #{value})
	    ]]>
    </select>
    
    <update id="PX-GOODS-COST-CFG-UPDATE-GET-BY-ID">
        update phoenix.px_goods_cost_cfg
			set
				<if test="goodsCost!=null">
					goods_cost = #{goodsCost},
				</if>
				gmt_modified = now()
			where
				goods_id = #{goodsId}
    </update>
