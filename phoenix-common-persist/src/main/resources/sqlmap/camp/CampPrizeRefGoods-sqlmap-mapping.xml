    <insert id="CAMP-SHOP-PRIZE-REF-GOODS-INSERT" parameterType="com.myteay.phoenix.common.dal.camp.dataobject.CampPrizeGoodsRefDO">
		insert into phoenix.camp_prize_goods_ref (
		    prizeId,goods_id,gmt_created,gmt_modified
