<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"   
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
       xmlns:context="http://www.springframework.org/schema/context"   
       xmlns:mvc="http://www.springframework.org/schema/mvc"  
       xsi:schemaLocation="http://www.springframework.org/schema/mvc   
       http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd  
        http://www.springframework.org/schema/beans   
                http://www.springframework.org/schema/beans/spring-beans-4.1.xsd  
        http://www.springframework.org/schema/context   
                http://www.springframework.org/schema/context/spring-context-4.1.xsd"
	default-autowire="byName">
	
	<bean id="pxDataDictionaryComponent" class="com.myteay.phoenix.core.service.component.impl.PxDataDictionaryComponentImpl"></bean>
	
	<bean id="pxEventPublishTool" class="com.myteay.phoenix.core.service.tools.PxEventPublishTool"></bean>
	
	<bean id="campServiceComponent" class="com.myteay.phoenix.core.service.component.impl.CampServiceComponentImpl"></bean>
	
	<bean id="pxProcessComponent" class="com.myteay.phoenix.core.service.component.impl.PxProcessComponentImpl"></bean>

	<!-- 订单优惠券监听 -->
	<bean id="pxCampPrizeMarkListener" class="com.myteay.phoenix.core.service.listeners.PxCampPrizeMarkListener">
		<property name="descriptor">
			<bean class="com.myteay.common.async.event.ListenerDescriptor">
				<property name="topic" value="PX_CAMP_PRIZE_MARK"></property>
				<property name="async" value="true"></property>
				<property name="taskExecutor" ref="myteayHigherTaskExecutor"></property>
			</bean>
		</property>
	</bean>	

	<!-- 订单成本 -->
	<bean id="pxGoodsCostMarkListener" class="com.myteay.phoenix.core.service.listeners.PxGoodsCostMarkListener">
		<property name="descriptor">
			<bean class="com.myteay.common.async.event.ListenerDescriptor">
				<property name="topic" value="PX_GOODS_COST_MARAK"></property>
				<property name="async" value="true"></property>
				<property name="taskExecutor" ref="myteayHigherTaskExecutor"></property>
			</bean>
		</property>
	</bean>	

	<!-- 优惠券抵扣监听器 -->
	<bean id="pxCampPrizeConsumeListener" class="com.myteay.phoenix.core.service.listeners.PxCampPrizeConsumeListener">
		<property name="descriptor">
			<bean class="com.myteay.common.async.event.ListenerDescriptor">
				<property name="topic" value="PX_CAMP_PRIZE_CONSUME"></property>
				<property name="async" value="true"></property>
				<property name="taskExecutor" ref="myteayHigherTaskExecutor"></property>
			</bean>
		</property>
	</bean>	

	<!-- 成本计算监听器 -->
	<bean id="pxGoodsCostCoveredListener" class="com.myteay.phoenix.core.service.listeners.PxGoodsCostCoveredListener">
		<property name="descriptor">
			<bean class="com.myteay.common.async.event.ListenerDescriptor">
				<property name="topic" value="PX_GOODS_COST_COVERED"></property>
				<property name="async" value="true"></property>
				<property name="taskExecutor" ref="myteayHigherTaskExecutor"></property>
			</bean>
		</property>
	</bean>	
</beans>
